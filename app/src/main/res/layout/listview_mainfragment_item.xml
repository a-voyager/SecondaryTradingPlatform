<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:freco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/horizontalSpacing">

    <TextView
        android:id="@+id/tv_goodsname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/textsize_small"
        tools:text="测试商品" />
    <com.facebook.drawee.view.SimpleDraweeView
        freco:placeholderImage="@drawable/ic_jike_login"
        freco:progressBarAutoRotateInterval="5000"
        freco:progressBarImage="@drawable/loading"
        android:id="@+id/sdv_mainfragment_goodsimg"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp" />
</LinearLayout>